{
  "name": "station_database",
  "version": "0.0.1",
  "description": "JSON・CSVデータの処理・テストに利用するスクリプト",
  "private": "true",
  "main": "not-exist.js",
  "scripts": {
    "check-src": "ts-node src/ts/check.ts",
    "build-main": "ts-node src/ts/build.ts",
    "build-extra": "ts-node src/ts/build.ts -e",
    "bump-version-main": "ts-node src/ts/bump_version.ts",
    "bump-version-extra": "ts-node src/ts/bump_version.ts -e",
    "schema": "rm -f out/schema/*.json && ts-node src/ts/jsonschema",
    "docs": "rm -f docs/*.md && jsonschema2md -d out/schema -o docs/ -x - -i src/schema_locale -h false -n",
    "test-format-main": "DATASET=main jest -- src/ts/format.test.ts",
    "test-format-extra": "DATASET=extra jest -- src/ts/format.test.ts",
    "check-update": "ts-node src/ts/check_update.ts",
    "download": "ts-node src/ekimemo/download.ts",
    "test-ekimemo": "jest --  src/ekimemo/check.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seo-4d696b75/station_database.git"
  },
  "keywords": [
    "json",
    "csv"
  ],
  "author": "Seo-4d696b75",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Seo-4d696b75/station_database/issues"
  },
  "homepage": "https://github.com/Seo-4d696b75/station_database#readme",
  "devDependencies": {
    "@adobe/jsonschema2md": "^7.1.1",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.1",
    "@types/jsdom": "^21.1.6",
    "ajv": "^8.11.0",
    "axios": "^1.7.4",
    "csv-parse": "^5.5.6",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.7",
    "glob": "^11.0.0",
    "jest": "^28.1.1",
    "jsdom": "^24.0.0",
    "octokit": "^3.1.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@types/yargs": "^17.0.33",
    "yargs": "^17.7.2"
  }
}
